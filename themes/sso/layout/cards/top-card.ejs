<div class="col-lg-12 mb-5">
  <div
    class="card bg-primary shadow-soft border-light flex-lg-row align-items-center no-gutters p-4"
  >
    <a href="<%- config.root %><%- post.path %>" class="col-12 col-lg-6">
      <img
        src="<%- config.root %><%- post.featured_image || theme.featured_image %>"
        class="card-img-top rounded featured-image"
        alt="<%- post.title %>"
      />
    </a>
    <div
      class="card-body d-flex flex-column justify-content-between align-items-center col-auto py-4 p-lg-3 p-xl-5"
    >
      <a href="<%- config.root %><%- post.path %>">
        <h2><%- post.title %></h2>
      </a>
      <p>
        <%- post.summary || post.excerpt %>
      </p>
      <div class="mt-3">
        <span class="h6 text-muted small font-weight-normal mb-0 ml-auto">
            <time datetime="<%= post.date %>"><%= post.date.format(config.date_format) %></time>
        </span>
      </div>
    </div>
  </div>
</div>
